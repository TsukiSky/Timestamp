<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framgments.TodayFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_top_bar_today"/>

        <!--    Must Done    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Must Done"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_dash_line"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_today_recycler_must_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>

        <!--    Maybe Later    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maybe Later"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_dash_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_today_recycler_maybe_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>

        <!--    Can Be Postponed    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can Be Postponed"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_dash_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_today_recycler_postponed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</FrameLayout>