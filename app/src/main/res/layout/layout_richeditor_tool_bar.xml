<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/richeditor_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_format_bold_24"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_format_italic_24"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_format_underlined_24"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/fore_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_text_format_24"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/back_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_draw_24"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>
